<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">商品登録</h1>
        <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.label :商品名, class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :商品概要, class: 'text-white' %>
            <%= f.text_field :description, class: 'form-control' %>
          </div>

          <%= f.submit "登録", class: 'btn-block btn-white' %>
        <% end %>
        
      </div>
    </div>
  </div>
</div>